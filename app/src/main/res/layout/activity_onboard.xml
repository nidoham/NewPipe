<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:gravity="center"
     android:padding="10dp"
     android:orientation="vertical">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center">

        <ImageView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:src="@mipmap/ic_launcher"
             android:layout_margin="20dp" />

    </LinearLayout>

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginBottom="16dp"
         android:gravity="center"
         android:textSize="28sp"
         android:id="@+id/text_title"
         android:layout_gravity="center_horizontal"
         android:text="Choose Your Experience"
         android:textStyle="bold" />

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginBottom="40dp"
         android:gravity="center"
         android:textAlignment="center"
         android:textSize="16sp"
         android:id="@+id/text_subtitle"
         android:text="Select the interface that you prefer." />

    <com.google.android.material.card.MaterialCardView
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginBottom="16dp"
         android:clickable="true"
         app:strokeColor="#007AFF"
         app:cardElevation="4dp"
         app:strokeWidth="2dp"
         app:cardCornerRadius="16dp"
         android:focusable="true"
         android:id="@+id/card_new_ui">

        <RelativeLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:padding="16dp">

            <ImageView
                 android:layout_height="120dp"
                 android:layout_width="match_parent"
                 android:scaleType="fitCenter"
                 android:src="@drawable/ic_features_new"
                 android:contentDescription="@string/new_ui_preview"
                 android:id="@+id/image_new_ui" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_below="@id/image_new_ui"
                 android:textSize="18sp"
                 android:layout_marginTop="12dp"
                 android:layout_alignParentStart="true"
                 android:id="@+id/text_new_ui_title"
                 android:text="New UI/UX"
                 android:textStyle="bold" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:textSize="14sp"
                 android:textColor="#007AFF"
                 android:paddingStart="12dp"
                 android:layout_marginTop="12dp"
                 android:layout_below="@id/image_new_ui"
                 android:paddingEnd="12dp"
                 android:background="@drawable/recommended_bg"
                 android:paddingBottom="4dp"
                 android:id="@+id/text_recommended"
                 android:text="Recommended"
                 android:textStyle="bold"
                 android:paddingTop="4dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:clickable="true"
         app:cardElevation="4dp"
         app:strokeWidth="1dp"
         app:cardCornerRadius="16dp"
         android:focusable="true"
         android:id="@+id/card_old_ui">

        <RelativeLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:padding="16dp">

            <ImageView
                 android:layout_height="120dp"
                 android:layout_width="match_parent"
                 android:scaleType="fitCenter"
                 android:src="@drawable/ic_features_old"
                 android:contentDescription="@string/old_ui_preview"
                 android:id="@+id/image_old_ui" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_below="@id/image_old_ui"
                 android:textSize="18sp"
                 android:layout_marginTop="12dp"
                 android:layout_alignParentStart="true"
                 android:id="@+id/text_old_ui_title"
                 android:text="Old UI/UX"
                 android:textStyle="bold" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>